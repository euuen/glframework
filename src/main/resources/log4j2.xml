<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- 定义 Appenders -->
    <Appenders>
        <!-- 输出到控制台 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5p %c{1}:%L - %msg%n"/>
        </Console>
    </Appenders>

    <!-- 定义 Loggers -->
    <Loggers>
        <!-- 根 Logger -->
        <Root level="trace">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>